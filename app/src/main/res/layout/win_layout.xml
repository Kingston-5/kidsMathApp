<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#1C1241">

    <ImageView android:src="@drawable/reward" android:layout_width="150dp" android:layout_height="150dp"/>

    <TextView android:id="@+id/textView3" android:fontFamily="@font/thebomb" android:text="- Good Job -" android:layout_marginTop="50dp" android:textColor="#33FFDD" android:textSize="36sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textView4" android:fontFamily="@font/thebomb" android:text="Your Score" android:layout_marginTop="36dp" android:textColor="#FFFFFF" android:textSize="24sp" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:ignore="HardcodedText" />

    <TextView android:id="@+id/FinalScoreTextView" android:fontFamily="@font/ribeye" android:text="0/0" android:layout_marginTop="40dp" android:layout_marginBottom="40dp" android:textColor="#F4F0F0" android:textSize="50sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal" android:layout_gravity="center" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <Button android:id="@+id/buttonPlayAgain" android:fontFamily="@font/thebomb" android:layout_margin="10dp" android:padding="10dp" android:text="Play Again" android:backgroundTint="#4CAF50" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnBack" android:fontFamily="@font/thebomb" android:layout_margin="10dp" android:padding="10dp" android:text="Back" android:backgroundTint="#1189BF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>